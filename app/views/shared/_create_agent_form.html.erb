<div class="row form_margin">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@agent) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Agent Name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label "Agent HubSpot ID" %>
      <%= f.number_field :hubspot_id, class: 'form-control' %>

      <%= f.submit "Add Agent", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
