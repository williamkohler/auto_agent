<div class="row">
  <div class="col-md-6 col-md-offset-3 form_margin">
    <%= form_for(@show) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label "HubSpot Deal ID" %>
      <span><em>(case senstive)</em></span>
      <%= f.number_field :deal_id, class: 'form-control' %>

      <%= f.label :artist %>
      <%= f.text_field :artist, class: 'form-control' %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: 'form-control' %>

      <%= f.submit "Add show", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
