<h1>Add Artist</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3 form_margin">
  <div>
    <%= form_for(@artist) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label "Add a new artist" %>
      <%= f.text_field :name,
                       placeholder:  'Artist Name',
                       class:         'form-control' %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
